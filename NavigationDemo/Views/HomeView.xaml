<UserControl x:Class="NavigationDemo.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#FFFDE7" Padding="30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="500">
            <TextBlock Text="🏠 NavigationLib Demo" 
                      FontSize="28" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,0,0,15">
                歡迎使用 NavigationLib 展示應用程式！
            </TextBlock>
            
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" 
                   Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="✨ 功能展示" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Margin="5,0,0,5">
                        • 多層次 Tab 導覽（4 層結構）
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Margin="5,0,0,5">
                        • ControlTemplate 延遲載入
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Margin="5,0,0,5">
                        • 程式化路徑導覽
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Margin="5,0,0,0">
                        • Region-based UI 容器管理
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="Gray" 
                      HorizontalAlignment="Center">
                使用左側的導覽按鈕開始體驗
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
