<UserControl x:Class="NavigationDemo.Views.Level1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:nav="clr-namespace:NavigationLib.FrameworksAndDrivers;assembly=NavigationLib"
             xmlns:local="clr-namespace:NavigationDemo.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF3E0" Padding="10" Margin="0,0,0,5">
            <StackPanel>
                <TextBlock Text="Level 1 Layer" FontSize="14" FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentSegment}" FontSize="10" Foreground="DarkOrange" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- TabControl with ControlTemplate for delayed loading -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="L1-A">
                <ContentControl>
                    <ContentControl.Template>
                        <ControlTemplate TargetType="ContentControl">
                            <local:Level2View nav:Region.Name="Level2" />
                        </ControlTemplate>
                    </ContentControl.Template>
                </ContentControl>
            </TabItem>
            <TabItem Header="L1-B">
                <ContentControl>
                    <ContentControl.Template>
                        <ControlTemplate TargetType="ContentControl">
                            <local:Level2AltView nav:Region.Name="Level2Alt" />
                        </ControlTemplate>
                    </ContentControl.Template>
                </ContentControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
