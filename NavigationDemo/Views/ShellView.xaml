<UserControl x:Class="NavigationDemo.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:nav="clr-namespace:NavigationLib.FrameworksAndDrivers;assembly=NavigationLib"
             xmlns:local="clr-namespace:NavigationDemo.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with current segment info -->
        <Border Grid.Row="0" Background="#E3F2FD" Padding="10" Margin="0,0,0,5">
            <StackPanel>
                <TextBlock Text="Shell Layer (Root)" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentSegment}" FontSize="11" Foreground="DarkBlue" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- TabControl with Home and Layer 1 -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="首頁">
                <local:HomeView />
            </TabItem>
            <TabItem Header="Layer 1">
                <local:Level1View nav:Region.Name="Level1" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
